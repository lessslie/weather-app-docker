# ==============================================
# WEATHER APP - Variables de Entorno
# ==============================================

# Entorno
NODE_ENV=production

# Base de Datos PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=weather_user
DB_PASSWORD=tu_password_super_seguro_postgres_2025
DB_DATABASE=weather_db_prod

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=tu_password_super_seguro_redis_2025

# JWT Authentication
JWT_SECRET=tu_jwt_secret_super_seguro_2025_weather_api_argentina_produccion
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=tu_refresh_secret_super_seguro_2025_weather_api_produccion
JWT_REFRESH_EXPIRES_IN=7d

# OpenWeatherMap API
OPENWEATHER_API_KEY=tu_api_key_de_openweathermap

# Configuración de la aplicación
PORT=3000
API_URL=http://localhost/api/v1

# SSL/TLS (para HTTPS en producción)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Configuración de logs
LOG_LEVEL=info

# Configuración de email (para notificaciones futuras)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password